{
  "manifest_version": 3,
  "name": "Privacy Policy Analyzer",
  "version": "1.0",
  "description": "Analyze and highlight risky privacy policy options.",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/icons8-color-16.png",
      "32": "/images/icons8-color-32.png",
      "48": "/images/icons8-color-48.png",
      "128": "/images/icons8-color-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "16": "/images/icons8-color-16.png",
    "32": "/images/icons8-color-32.png",
    "48": "/images/icons8-color-48.png",
    "128": "/images/icons8-color-128.png"
  }
}
